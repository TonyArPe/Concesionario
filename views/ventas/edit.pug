extends ../templates/layout

block content 

    form(method="post") 
        .mb-3
            label.form-label(for="Fecha_Venta") Fecha:
            input.form-control(type="text", name="Fecha_Venta" value=compra.Fecha_Venta)
        .mb-3
            label.form-label(for="Precio_Venta") Precio:
            input.form-control(type="text", name="Total" value=compra.Total)
        .mb-3
            label.form-label(for="Vehiculo") Vehiculo:
            input.form-control(type="text", name="ID_Vehiculo" value=compra.ID_Vehiculo)
        input(type="hidden", name="id", value=compra.ID_Cliente)
        button.btn.btn-danger(type="submit") Editar
