extends ../templates/layout

block content
    form(action=`/compras/edit/${compra.ID_Compra}`, method="post")
        .campo
            label(for="Cliente") Cliente:
            select.campo(name="ID_Cliente")
                each cliente in clientes
                   option(value=cliente.ID_Cliente selected=(cliente.ID_Cliente == compra.ID_Cliente))= cliente.Nombre
        .campo
            label(for="Vehiculo") Veh√≠culo:
            select(name="ID_Vehiculo")
                each vehiculo in vehiculos
                    option(value=vehiculo.ID_Vehiculo selected=(vehiculo.ID_Vehiculo == compra.ID_Vehiculo))= vehiculo.Marca + " - " + vehiculo.Modelo
        .campo
            label(for="Fecha_Compra") Fecha:
            input(type="date", name="Fecha_Compra", value=(new Date(compra.Fecha_Compra).toISOString().split('T')[0]))
        .campo
            label(for="Precio_Compra") Precio:
            input(type="text", name="Precio_Compra", value=compra.Precio_Compra)
        input(type="hidden", name="id", value=compra.ID_Cliente)
        button.edit(type="submit") Editar
