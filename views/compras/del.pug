extends ../templates/layout

block content 

    form(method="post") 
        .campo
            label(for="Fecha_Compra") Fecha:
            input(type="text", name="Fecha_Compra" value=compra.Fecha_Compra, disabled)
        .campo
            label(for="Precio_Compra") Precio:
            input(type="text", name="Precio_Compra" value=compra.Precio_Compra, disabled)
        .campo
            label(for="Vehiculo") Vehiculo:
            input(type="text", name="ID_Vehiculo" value=compra.ID_Vehiculo, disabled)
        input(type="hidden", name="id", value=compra.ID_Cliente)
        button.del(type="submit") Borrar
